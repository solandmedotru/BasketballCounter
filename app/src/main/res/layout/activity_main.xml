<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context="ru.solandme.basketballcounter.MainActivity">    <View        android:id="@+id/view2"        android:layout_width="0dp"        android:layout_height="@dimen/_2sdp"        android:background="@android:color/darker_gray"        android:layout_marginRight="@dimen/margin"        app:layout_constraintRight_toRightOf="parent"        android:layout_marginTop="@dimen/margin"        app:layout_constraintTop_toBottomOf="@+id/btnPlusOnePointToTeamOne"        android:layout_marginLeft="@dimen/margin"        app:layout_constraintLeft_toLeftOf="parent"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintRight_creator="1"        tools:layout_constraintLeft_creator="1" />    <EditText        android:id="@+id/teamNameOne"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/margin"        android:layout_marginRight="@dimen/margin"        android:layout_marginTop="@dimen/margin"        android:inputType="text"        android:padding="@dimen/_8ssp"        android:selectAllOnFocus="true"        android:text="@string/team_a"        android:textAlignment="center"        android:textSize="@dimen/_18ssp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="@+id/view"        app:layout_constraintTop_toTopOf="parent"        tools:layout_constraintRight_creator="1"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintLeft_creator="1" />    <TextView        android:id="@+id/scoreTeamOne"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/margin"        android:layout_marginRight="@dimen/margin"        android:gravity="center"        android:padding="@dimen/_8ssp"        android:text="0"        android:textAlignment="center"        android:textSize="@dimen/_70ssp"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toLeftOf="@+id/view"        app:layout_constraintTop_toBottomOf="@+id/teamNameOne"        tools:layout_constraintRight_creator="1"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintLeft_creator="1" />    <Button        android:id="@+id/btnPlusThreePointToTeamOne"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+3"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        android:layout_marginTop="@dimen/margin"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamOne"        app:layout_constraintRight_toLeftOf="@+id/view"        android:layout_marginRight="@dimen/margin"        android:layout_marginEnd="@dimen/margin" />    <Button        android:id="@+id/btnPlusTwoPointToTeamTwo"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:layout_marginLeft="@dimen/margin"        android:layout_marginRight="@dimen/margin"        android:layout_marginTop="@dimen/margin"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+2"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamTwo"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintRight_creator="1"        app:layout_constraintRight_toRightOf="@+id/btnPlusThreePointToTeamTwo"        tools:layout_constraintLeft_creator="1"        app:layout_constraintLeft_toLeftOf="@+id/btnPlusOnePointToTeamTwo" />    <Button        android:id="@+id/btnPlusOnePointToTeamOne"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:layout_marginTop="@dimen/margin"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+1"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamOne"        android:layout_marginLeft="@dimen/margin"        app:layout_constraintLeft_toLeftOf="parent"        android:layout_marginStart="@dimen/margin" />    <View        android:id="@+id/view"        android:layout_width="3dp"        android:layout_height="0dp"        android:layout_marginTop="@dimen/margin"        android:background="@android:color/darker_gray"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:layout_constraintTop_creator="1"        tools:layout_constraintRight_creator="1"        tools:layout_constraintBottom_creator="1"        tools:layout_constraintLeft_creator="1"        app:layout_constraintBottom_toBottomOf="@+id/view2"        android:layout_marginBottom="2dp" />    <EditText        android:id="@+id/teamNameTwo"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/margin"        android:layout_marginRight="@dimen/margin"        android:layout_marginTop="@dimen/margin"        android:inputType="text"        android:padding="@dimen/_8ssp"        android:text="@string/team_b"        android:textAlignment="center"        android:textSize="@dimen/_18ssp"        app:layout_constraintBottom_toBottomOf="@+id/teamNameOne"        app:layout_constraintLeft_toLeftOf="@+id/view"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent"        tools:layout_constraintRight_creator="1"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintLeft_creator="1" />    <TextView        android:id="@+id/scoreTeamTwo"        android:layout_width="0dp"        android:layout_height="wrap_content"        android:layout_marginLeft="@dimen/margin"        android:layout_marginRight="@dimen/margin"        android:gravity="center"        android:padding="@dimen/_8sdp"        android:text="0"        android:textAlignment="center"        android:textSize="@dimen/_70ssp"        app:layout_constraintLeft_toRightOf="@+id/view"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@+id/teamNameTwo"        tools:layout_constraintRight_creator="1"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin"        tools:layout_constraintLeft_creator="1" />    <Button        android:id="@+id/btnPlusThreePointToTeamTwo"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:layout_marginRight="@dimen/margin"        android:layout_marginTop="@dimen/margin"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+3"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamTwo"        android:layout_marginEnd="@dimen/margin" />    <Button        android:id="@+id/btnPlusTwoPointToTeamOne"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+2"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        android:layout_marginTop="@dimen/margin"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamOne"        tools:layout_constraintRight_creator="1"        tools:layout_constraintLeft_creator="1"        app:layout_constraintLeft_toRightOf="@+id/btnPlusOnePointToTeamOne"        android:layout_marginLeft="@dimen/margin"        app:layout_constraintRight_toLeftOf="@+id/btnPlusThreePointToTeamOne"        android:layout_marginRight="@dimen/margin"        android:layout_marginStart="@dimen/margin"        android:layout_marginEnd="@dimen/margin" />    <Button        android:id="@+id/btnPlusOnePointToTeamTwo"        style="@style/Widget.AppCompat.Button.Small"        android:layout_width="@dimen/_40sdp"        android:layout_height="@dimen/_40sdp"        android:layout_marginLeft="@dimen/margin"        android:layout_marginTop="@dimen/margin"        android:background="@color/colorPrimary"        android:onClick="onClickPlusBtn"        android:text="+1"        android:textColor="@android:color/white"        android:textSize="@dimen/_14ssp"        app:layout_constraintLeft_toRightOf="@+id/view"        app:layout_constraintTop_toBottomOf="@+id/scoreTeamTwo"        android:layout_marginStart="@dimen/margin" />    <cn.iwgang.countdownview.CountdownView        android:id="@+id/cv_countdownViewTest1"        android:layout_marginBottom="8dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintTop_toBottomOf="@+id/view2"        android:layout_marginTop="0dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        app:isHideTimeBackground="true"        app:isShowDay="false"        app:isShowHour="true"        app:isShowMinute="true"        app:isShowSecond="true"        app:isShowMillisecond="true"        app:timeTextColor="#000000"        app:timeTextSize="22sp"        app:isTimeTextBold="true"        app:suffixGravity="bottom"        app:suffixTextColor="#000000"        app:suffixTextSize="12sp"        app:suffixHour="h"        app:suffixMinute="m"        app:suffixSecond="s"        app:suffixMillisecond="ms"        android:layout_marginRight="8dp"        app:layout_constraintVertical_bias="0.497"        app:layout_constraintRight_toRightOf="parent"        android:layout_marginLeft="8dp"        app:layout_constraintLeft_toLeftOf="parent" />    <ImageView        android:id="@+id/editTwo"        android:layout_width="@dimen/_18sdp"        android:layout_height="@dimen/_18sdp"        app:layout_constraintBottom_toBottomOf="@+id/scoreTeamTwo"        app:layout_constraintRight_toRightOf="@+id/scoreTeamTwo"        app:srcCompat="@android:drawable/ic_menu_edit" />    <ImageView        android:id="@+id/editOne"        android:layout_width="@dimen/_18sdp"        android:layout_height="@dimen/_18sdp"        app:layout_constraintBottom_toBottomOf="@+id/scoreTeamOne"        app:layout_constraintRight_toRightOf="@+id/scoreTeamOne"        app:srcCompat="@android:drawable/ic_menu_edit" /></android.support.constraint.ConstraintLayout>